{
  "manifest_version": 2,
  "name": "__MSG_ext_name__",
  "version": "1970.01.01.0",
  "description": "__MSG_ext_description__",
  "default_locale": "en",
  "icons": {
    "16": "shared/icons/icon-16.png",
    "32": "shared/icons/icon-32.png",
    "48": "shared/icons/icon-48.png",
    "128": "shared/icons/icon-128.png"
  },
  "browser_action": {
    "default_title": "__MSG_ext_name__",
    "default_popup": "shared/popup/popup.html",
    "default_icon": {
      "16": "shared/icons/icon-16.png",
      "32": "shared/icons/icon-32.png",
      "48": "shared/icons/icon-48.png",
      "128": "shared/icons/icon-128.png"
    }
  },
  "permissions": ["storage", "tabs", "*://*.instagram.com/*"],
  "background": {
    "scripts": ["shared/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["shared/content-bootstrap.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": ["shared/inject.js"],
  "browser_specific_settings": {
    "gecko": {
      "id": "iasv@ilyasa.me",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  }
}
